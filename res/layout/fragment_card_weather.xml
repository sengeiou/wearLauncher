<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/status_time_contain_padding"
    android:paddingRight="@dimen/status_time_contain_padding"
    android:background="@drawable/main_bg"
    android:orientation="vertical">
	  
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	        
	    <com.sczn.wearlauncher.view.LanTingTextView
	        android:id="@+id/card_weather_time" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:textColor="@color/normal_text"
	        android:textSize="@dimen/status_time_textsize"/>

	    <com.sczn.wearlauncher.view.LanTingTextView
	        android:id="@+id/card_weather_city" 
	        android:layout_toEndOf="@id/card_weather_time"
	        android:layout_alignParentEnd="true"
	        android:layout_alignParentBottom="true"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="end"
	        android:textColor="@color/normal_text"
	        android:textSize="@dimen/status_time_textsize"/>
	</RelativeLayout>
	
<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="4">
	    
	    <LinearLayout 
	        android:id="@+id/weather_info"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center">
	        
	        <ImageView android:id="@+id/card_weather_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="@string/weather_temp"/>
	        <com.sczn.wearlauncher.view.LanTingTextView
		        android:id="@+id/card_weather_info" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/normal_text"
		        android:textSize="@dimen/card_weather_info"/>
	    </LinearLayout>

	    
	    <TextView 
	        android:id="@+id/card_weather_temp"
	        android:layout_toEndOf="@id/weather_info"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:layout_centerVertical="true"
	        android:textColor="@color/normal_text"
	        android:textSize="@dimen/card_weather_temp"/>
	    
	</RelativeLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"></LinearLayout>
</LinearLayout>
