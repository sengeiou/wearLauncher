<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:wearlauncher="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/main_bg"
    android:orientation="horizontal">
   
    <com.sczn.wearlauncher.view.status.QrcodeIcon 
        android:id="@+id/status_qrcode"
        style="@style/style_status_icon_contain"
        wearlauncher:iconsize="@dimen/status_icon_size"
        wearlauncher:textsize="@dimen/text_size_status"
        wearlauncher:stringId="@string/status_qrcode"
        wearlauncher:imageId="@drawable/statu_icon_qrcode"/>
    <com.sczn.wearlauncher.view.status.SettingIcon
        android:id="@+id/status_setting"
        style="@style/style_status_icon_contain"
        wearlauncher:iconsize="@dimen/status_icon_size"
        wearlauncher:textsize="@dimen/text_size_status"
        wearlauncher:stringId="@string/status_setting"
        wearlauncher:imageId="@drawable/statu_icon_setting"/>
</LinearLayout> 
